<Page x:Class="JewishWorldWpf.SearcherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JewishWorldWpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearcherPage">

    <Grid>
        <TextBlock Text="Where are we going?" FontSize="45" Foreground="Blue" FontFamily="Algerian"  HorizontalAlignment="Center"/>
        <StackPanel Margin="75"  Orientation="Vertical" VerticalAlignment="Center" >
            <TextBlock Text="Coutry" FontSize="35" Foreground="Blue" FontFamily="Algerian"></TextBlock>
            <ComboBox x:Name="countryCombo" Width="250" Height="20">
            </ComboBox>
            <TextBlock Text="City" Margin="5" FontSize="35" Foreground="Blue" FontFamily="Algerian"></TextBlock>
            <ComboBox x:Name="cityCombo" Width="250" Height="20"    >
            </ComboBox>
            <Button  Content="Search" Foreground="Blue" Background="Transparent" Margin="25" BorderThickness="0" Click="Button_Click" />

        </StackPanel>
        
       
    </Grid>
</Page>
