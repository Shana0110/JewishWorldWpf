<Page x:Class="JewishWorldWpf.PopularPlacesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JewishWorldWpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PopularPlacesPage">

    <Grid>
        <StackPanel>
            <TextBlock x:Name="PpCityName" FontSize="70" FontFamily="Monotype Corsiva" Foreground="Black"/>
            <WrapPanel x:Name="myWrapPanel" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Margin="20" x:Name="stk" Visibility="Hidden">
                <TextBlock Text="Adress:"/>
                <TextBox  Margin="5,0" x:Name="a" Width="100"  Height="20" />
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
